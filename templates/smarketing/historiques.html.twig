{% extends "base.html.twig" %} 

{% block body %}
    <form>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Message</th> 
                    <th scope="col">Date d'envoi</th> 
                </tr>
            </thead>
            <tbody>
                {% for message in messages %}
                    <tr>
                        <th scope="row">{{message.id}}</th>
                        <td>{{message.motif}}</td>      
                        <td>{{message.sendAT|date('d/m/Y H:i:s ' )}}</td>   
                    </tr>
                {% endfor%}

            </tbody>
        </table>
    </form>    
{% endblock %}