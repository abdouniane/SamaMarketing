{% extends "base.html.twig" %} 

{% block body %}
    <form>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Numéro</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for admin in admins %}
                    <tr>
                        <th scope="row">{{admin.id}}</th>
                        <td>{{admin.nom}}</td>
                        <td>{{admin.prenom}}</td>
                        <td>{{admin.telephone}}</td>
                        <td>{{admin.email}}</td> 
                        <td><a href="/admin/{{admin.id}}/edit" >Modifier</a>
                         &nbsp;&nbsp;&nbsp;
                           <a style="color:red" href="/admin/{{admin.id}}/delete" >Supprimer</a> 
                        </td>
                        
                    </tr>
                {% endfor%} 
            </tbody>
        </table>
    </form>    
{% endblock %}